<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreditActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-100dp"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/credit_btn_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nexon_lv1_gothic_low_otr_bold"
                android:padding="20dp"
                android:textColor="@color/white"
                android:background="@drawable/credit_btn"
                android:text="500 Credit"
                android:textSize="20dp" />

            <Button
                android:id="@+id/credit_btn_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nexon_lv1_gothic_low_otr_bold"
                android:padding="20dp"
                android:textColor="@color/white"
                android:background="@drawable/credit_btn"
                android:text="1000 Credit"
                android:textSize="20dp" />

            <Button
                android:id="@+id/credit_btn_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nexon_lv1_gothic_low_otr_bold"
                android:padding="20dp"
                android:textColor="@color/white"
                android:background="@drawable/credit_btn"
                android:text="5000 Credit"
                android:textSize="20dp" />

            <Button
                android:id="@+id/credit_btn_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nexon_lv1_gothic_low_otr_bold"
                android:padding="20dp"
                android:textColor="@color/white"
                android:background="@drawable/credit_btn"
                android:text="10000 credit"
                android:textSize="20dp" />

            <Button
                android:id="@+id/credit_btn_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nexon_lv1_gothic_low_otr_bold"
                android:padding="20dp"
                android:textColor="@color/white"
                android:background="@drawable/credit_btn"
                android:text="50000 Credit"
                android:textSize="20dp" />

            <Button
                android:id="@+id/credit_btn_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nexon_lv1_gothic_low_otr_bold"
                android:padding="20dp"
                android:textColor="@color/white"
                android:background="@drawable/credit_btn"
                android:text="100000Credit"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>